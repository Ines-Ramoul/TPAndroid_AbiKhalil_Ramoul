<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/myFirstActivityText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bonjour Monsieur ! "
        android:textColor="#033E92"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonCalculatrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculatrice"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/buttonCliqueMoi"
        app:layout_constraintStart_toStartOf="@+id/buttonCliqueMoi" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VOUS n'Ãªtes pas content ??"
        android:textColor="#033E92"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/myFirstActivityText"
        app:layout_constraintStart_toStartOf="@+id/myFirstActivityText"
        app:layout_constraintTop_toBottomOf="@+id/myFirstActivityText" />

    <Button
        android:id="@+id/buttonCliqueMoi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tutoie Moi !"
        app:layout_constraintBottom_toTopOf="@+id/buttonCalculatrice"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/buttonCliqueMoi"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:srcCompat="@drawable/amosse" />

</androidx.constraintlayout.widget.ConstraintLayout>