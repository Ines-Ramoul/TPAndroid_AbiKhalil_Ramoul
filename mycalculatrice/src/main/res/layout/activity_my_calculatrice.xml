<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyCalculatrice">

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Clear"
        style="@style/Widget.AppCompat.Button"
        app:layout_constraintWidth_percent="0.75"
        android:textColor="@color/white"
        android:background="#F01515"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintStart_toStartOf="@+id/button7" />

    <!-- <Button
         android:id="@+id/buttonParentheses"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         android:text="()"
         android:theme="@style/AppTheme.Button"
         app:layout_constraintWidth_percent="0.25"
         app:layout_constraintBottom_toTopOf="@+id/button8"
         app:layout_constraintStart_toEndOf="@+id/buttonClear" />-->

    <!--<Button
        android:id="@+id/buttonPourcentage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="%"
        android:theme="@style/AppTheme.ButtonOperation"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintStart_toEndOf="@+id/buttonParentheses" />-->

    <Button
        android:id="@+id/button7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="7"
        android:background="@drawable/mybutton"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintStart_toStartOf="@+id/button4" />

    <Button
        android:id="@+id/button8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="8"
        android:background="@drawable/mybutton"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintStart_toEndOf="@+id/button7" />

    <Button
        android:id="@+id/button9"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="9"
        android:background="@drawable/mybutton"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintStart_toEndOf="@+id/button8" />

    <Button
        android:id="@+id/button4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="4"
        android:background="@drawable/mybutton"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@+id/button1"
        app:layout_constraintStart_toStartOf="@+id/button1" />

    <Button
        android:id="@+id/button5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="5"
        android:background="@drawable/mybutton"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintStart_toEndOf="@+id/button4" />

    <Button
        android:id="@+id/button6"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="6"
        android:background="@drawable/mybutton"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/button5" />

    <Button
        android:id="@+id/button1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:background="@drawable/mybutton"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@+id/button0"
        app:layout_constraintStart_toStartOf="@+id/button0" />

    <Button
        android:id="@+id/button2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="2"
        android:background="@drawable/mybutton"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@+id/button0"
        app:layout_constraintStart_toEndOf="@+id/button1" />

    <Button
        android:id="@+id/button3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:background="@drawable/mybutton"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@+id/buttonPoint"
        app:layout_constraintStart_toEndOf="@+id/button2" />

    <Button
        android:id="@+id/button0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:background="@drawable/mybutton"
        app:layout_constraintWidth_percent="0.50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!--<Button
        android:id="@+id/button0"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:theme="@style/AppTheme.Button"
        app:layout_constraintWidth_percent="0.50"
        app:layout_constraintBottom_toBottomOf="@+id/buttonPlusMoins"
        app:layout_constraintStart_toEndOf="@+id/buttonPlusMoins" />-->

    <Button
        android:id="@+id/buttonPoint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="."
        android:textSize="20sp"
        android:background="@drawable/mybutton"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toBottomOf="@+id/button0"
        app:layout_constraintStart_toEndOf="@+id/button0" />
    <Button
        android:id="@+id/buttonEgale"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="="
        android:textSize="33sp"
        android:textColor="#000000"
        android:background="@color/white"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toBottomOf="@+id/buttonPoint"
        app:layout_constraintStart_toEndOf="@+id/buttonPoint"
        />
    <Button
        android:id="@+id/buttonPlus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:background="@drawable/myoperationbutton"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@+id/buttonEgale"
        app:layout_constraintStart_toEndOf="@+id/button3" />
    <Button
        android:id="@+id/buttonMoins"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:background="@drawable/myoperationbutton"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@+id/buttonPlus"
        app:layout_constraintStart_toEndOf="@+id/button6" />
    <Button
        android:id="@+id/buttonFoix"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="x"
        android:background="@drawable/myoperationbutton"
        app:layout_constraintWidth_percent="0.25"
        app:layout_constraintBottom_toTopOf="@+id/buttonMoins"
        app:layout_constraintStart_toEndOf="@+id/button9" />

    <Button
        android:id="@+id/buttonDiviser"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="/"
        android:background="@drawable/myoperationbutton"
        app:layout_constraintBottom_toTopOf="@+id/buttonFoix"
        app:layout_constraintStart_toEndOf="@+id/buttonClear"
        app:layout_constraintWidth_percent="0.25" />

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#033E92"
        app:layout_constraintBottom_toTopOf="@+id/buttonClear" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:gravity="bottom"
        android:inputType=""
        android:lines="2"
        android:maxLines="2"
        android:textColor="#033E92"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/infoTextView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ma Calculatrice !"
        android:textColor="#033E92"
        android:textSize="35sp"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>